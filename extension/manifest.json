{
  "manifest_version": 3,
  "name": "Bookmarkd",
  "version": "1.0",
  "description": "Save current page to Bookmarkd.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bookmarkd@yourdomain.com"
    }
  }
}
